#!/bin/bash
set -o nounset -o errexit -o pipefail

IP_ADDR=$(cat /etc/hostname)
CONF_DIR="$HOME/.jupyter"
CONF_FILE="${CONF_DIR}/jupyter_notebook_config.py"

mkdir -p "${CONF_DIR}"

PREFIX=/workspacesession/${ILYDE_JOB_ID}/

cat <<EOF >>"${CONF_FILE}"
c.NotebookApp.notebook_dir = '/'
c.NotebookApp.tornado_settings = {'headers': {'Content-Security-Policy': 'frame-ancestors *'}, 'static_url_prefix': '${PREFIX}static/'}
c.NotebookApp.default_url = 'tree${ILYDE_WORKING_DIR}'
#disable quit button in Jupyter 5.5+
c.NotebookApp.quit_button = False 
EOF

# Replace * in "--ip=*" with the actual IP address of the container
COMMAND='jupyter notebook --no-browser --ip=* 2>&1'
FINAL_COMMAND=$(echo "${COMMAND}" | sed "s/--ip=\\*/--ip=${IP_ADDR}/")

eval ${FINAL_COMMAND}
